<?xml version="1.0" encoding="UTF-8"?>
<phpunit
	bootstrap="./Bootstrap.php"
	colors="TRUE"	
	stop-on-error="FALSE"
	stop-on-failure="FALSE"
	stop-on-skipped="FALSE"
	stop-on-incomplete="FALSE"
	strict="TRUE"
	verbose="TRUE">
	<testsuites>
	  <testsuite name="Nova Library Test Suite">
	    <directory suffix="test.php">./Nova</directory>
	  </testsuite>
	</testsuites>
	<logging>
	    <log type="coverage-html" target="./Coverage/coverage-html" charset="UTF-8" yui="true" highlight="true" 
	    lowUpperBound="35" highLowerBound="70" />
	    <log type="coverage-clover" target="./Coverage/coverage-clover/coverage.xml" />
	     <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
	</logging>
	<filter>
	    <blacklist>
	        <directory>./coverage-html</directory>
		<directory>./coverage-clover</directory>
		<directory>./testfiles</directory>
	    </blacklist>
	    <whitelist processUncoveredFilesFromWhitelist="false">
    		<directory suffix=".php">../Library</directory>
    	</whitelist>
	</filter>
</phpunit>
